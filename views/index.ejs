<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>GitBiz</title>
    <style>
        body {
            background-color: #1a1a1a;
            /* Darker background */
            color: #fff;
            /* White text for better contrast */
            font-size: 1rem;
            /* Slightly smaller font size */
        }

        .navbar {
            font-size: 1.2rem;
            /* Slightly larger navbar font */
            padding-top: 25px;
            /* Increase padding top */
            padding-bottom: 25px;
            /* Increase padding bottom */
        }

        .navbar-brand {
            font-weight: bold;
        }

        .navbar .navbar-brand {
            font-size: 1.5rem;
            margin: auto;
            /* Centering the title */
        }

        .navbar-nav {
            margin-left: auto;
        }

        .hero-banner {
            width: 100%;
            height: 500px;
            /* Increased height for the hero banner */
            background: url('/images/banner.jpg') no-repeat center center;
            background-size: cover;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #fff;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
        }

        .hero-banner h1 {
            font-size: 3rem;
            /* Larger font size for the hero banner heading */
            font-weight: bold;
        }

        .banner {
            width: 100%;
            height: 200px;
            /* Increased height for the event banners */
            object-fit: cover;
            margin-bottom: 15px;
        }

        .event-card {
            border: 2px solid #66ff33;
            /* Lighter neon green color border */
            border-radius: 10px;
            margin-bottom: 20px;
            padding: 20px;
            padding-bottom: 40px;
            background-color: rgba(255, 255, 255, 0.05);
            /* More transparent card */
            position: relative;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
            /* Holographic shadow effect */
        }

        .event-title {
            font-size: 1.1em;
            /* Slightly smaller font size */
            font-weight: bold;
            color: #fff;
            margin-top: 10px;
            /* Space out the image and title */
        }

        .event-location,
        .event-datetime,
        .event-desc {
            font-size: 0.9em;
            /* Slightly smaller font size */
            margin-top: 6px;
            color: #ccc;
        }

        .read-more,
        .view-more {
            cursor: pointer;
            color: #007bff;
        }

        .collapsed {
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .expanded {
            white-space: normal;
        }

        .hidden {
            display: none;
        }

        .btn-container {
            position: absolute;
            bottom: 10px;
            right: 10px;
        }

        .btn-container .btn {
            margin-left: 5px;
        }

        html {
            position: relative;
            min-height: 100%;
        }

        body {
            margin-bottom: 100px;
            /* Increased margin for the footer */
        }

        footer {
            width: 100%;
            background-color: #333;
            color: white;
            text-align: center;
            padding: 20px 0;
            position: absolute;
            bottom: 0;
            left: 0;
        }

        .review-card {
            border: 2px solid #66ff33;
            /* Lighter neon green color border */
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 20px;
            background-color: rgba(255, 255, 255, 0.05);
            /* More transparent card */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
            /* Holographic shadow effect */
        }

        .reviewer a {
            font-size: 1em;
            /* Slightly smaller font size */
            font-weight: bold;
            color: #4caf50;
            /* Green color for reviewer name */
            text-decoration: none;
            /* Remove underline */
            cursor: pointer;
            /* Show pointer cursor on hover */
            transition: color 0.3s ease;
            /* Smooth color transition */
            margin-bottom: 6px;
        }

        .reviewer a:hover {
            color: #2e7d32;
            /* Darker green on hover */
        }

        .rating {
            color: #ffc107;
            /* Bootstrap warning color for rating */
            margin-bottom: 6px;
        }

        .comment {
            margin-bottom: 10px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .read-more-comment {
            cursor: pointer;
            color: #007bff;
        }

        .expanded-comment {
            white-space: normal;
        }

        .btn-container {
            position: relative;
            margin-top: 20px;
            /* Adjust top margin as needed */
            text-align: center;
            /* Center align the button */
        }

        .btn-container .btn {
            margin-left: 5px;
        }

        .btn-container .btn-dark.btn-success {
            background-color: #388e3c;
            /* Darker green background */
            transition: background-color 0.3s ease;
            /* Smooth transition */
        }

        .btn-container .btn-dark.btn-success:hover {
            background-color: #2e7d32;
            /* Darker shade on hover */
            color: #fff;
            /* White text on hover */
        }

        .navbar-nav .nav-link.btn {
            border-radius: 20px;
            /* Adjust border-radius for rounded corners */
            padding: 10px 20px;
            /* Adjust padding as needed */
            color: #fff;
            /* White text */
        }

        .navbar-nav .nav-link.btn.btn-success {
            background-color: #4caf50;
            /* Green background color */
            transition: background-color 0.3s ease;
            /* Smooth transition for background color */
        }

        .navbar-nav .nav-link.btn.btn-success:hover {
            background-color: #66bb6a;
            /* Lighter green on hover */
            color: #fff;
            /* White text on hover */
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">&#9757;GitBiz</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/"><strong>Homepage</strong></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/addEvent"><strong>New Event</strong></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/addReview"><strong>Add New Review</strong></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-rounded btn-success" href="/purchase"><strong>Purchase N
                                Bid</strong></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="hero-banner">
        <h1>Get Into Your Own Events NOW!</h1>
    </div>

    <div class="container"><br>
        <hr>
    </div>
    <div class="container">
        <br>
        <div class="text-center">
            <h2><strong>Available Ongoing Events And Programs!</strong></h2>
        </div><br>
        <br>
        <div class="row">
            <% for(let i=0; i < events.length; i++) { %>
                <div class="col-md-4">
                    <div class="event-card">
                        <img src="/images/<%= events[i].image %>" class="banner" alt="<%= events[i].title %>">
                        <div class="event-details">
                            <div class="event-title"><a href="/event/<%= events[i].eventId %>">
                                    <%= events[i].title %>
                                </a></div>
                            <div class="event-location"><strong>Location:</strong>
                                <%= events[i].location %>
                            </div>
                            <div class="event-datetime"><strong>Date & Time:</strong>
                                <%= new Date(events[i].date).toLocaleString('en-US', { month: 'short' , day: '2-digit' ,
                                    year: 'numeric' , hour: '2-digit' , minute: '2-digit' }) %>
                            </div>
                            <div id="desc-<%= events[i].eventId %>" class="event-desc collapsed">
                                <strong>Description:</strong>
                                <%= events[i].desc %>
                            </div>
                            <% if (events[i].desc.split(" ").length > 10) { %>
                                <span id=" read-more-event-<%=events[i].eventId %>" class="read-more"
                                onclick="toggleDescription('<%= events[i].eventId %>')">Read more</span>
                                    <% } %>
                        </div>
                        <div class="btn-container">
                            <a href="/editEvent/<%= events[i].eventId %>" class="btn btn-warning btn-sm">Edit</a>
                            <a href="/deleteEvent/<%= events[i].eventId %>" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
    </div>

    <div class="container">
        <hr><br>
        <h2><strong>Latest Reviews</strong></h2><br>
        <div class="row">
            <% for(let i=0; i < reviews.length; i++) { %>
                <div class="col-md-6">
                    <div class="review-card">
                        <div class="event-details">
                            <div class="reviewer"><a href="/review/<%= reviews[i].reviewId %>">
                                    <%= reviews[i].reviewer %>
                                </a></div>
                            <div class="rating">Rating: <%= reviews[i].rating %>
                            </div>
                            <div id="comment-<%= reviews[i].reviewId %>" class="event-desc comment collapsed">
                                <%= reviews[i].comment %>
                            </div>
                            <% if (reviews[i].comment.split(" ").length > 10) { %>
                                <span id=" read-more-comment-<%=reviews[i].reviewId %>" class="read-more-comment"
                                onclick="toggleComment('<%= reviews[i].reviewId %>')">Read more</span>
                                    <% } %>
                                        <div class="event-datetime rdate">
                                            Reviewed on: <%= new Date(reviews[i].rdate).toLocaleDateString('en-US', {
                                                year: 'numeric' , month: 'short' , day: 'numeric' }) %>
                                        </div>
                                        <div class="btn-container">
                                            <a href="/editReview/<%= reviews[i].reviewId %>"
                                                class="btn btn-warning btn-sm me-2">Edit</a>
                                            <a href="/deleteReview/<%= reviews[i].reviewId %>"
                                                class="btn btn-danger btn-sm">Delete</a>
                                        </div>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
    </div>

    <br><br>
    <footer>
        <p>&copy; 2024 GitBiz. All rights reserved.</p>
    </footer>

    <div class="btn-container text-center">
        <a href="#top" style="margin-bottom: 20px" class="btn btn-rounded btn-dark btn-success">Back to Top</a>
    </div>

    <script>
        function toggleDescription(id) {
            const descElement = document.getElementById(`desc-${id}`);
            descElement.classList.toggle('collapsed');
            descElement.classList.toggle('expanded');

            const readMoreElement = document.getElementById(`read-more-event-${id}`);
            if (readMoreElement) {
                if (descElement.classList.contains('collapsed')) {
                    readMoreElement.textContent = 'Read more';
                } else {
                    readMoreElement.textContent = 'Show less';
                }
            }
        }

        function toggleComment(reviewId) {
            const commentElement = document.getElementById(`comment-${reviewId}`);
            const readMoreElement = document.getElementById(`read-more-comment-${reviewId}`);

            if (commentElement.classList.contains('collapsed')) {
                commentElement.classList.remove('collapsed');
                commentElement.classList.add('expanded-comment');
                readMoreElement.textContent = 'Show less';
            } else {
                commentElement.classList.remove('expanded-comment');
                commentElement.classList.add('collapsed');
                readMoreElement.textContent = 'Read more';
            }
        }
    </script>
</body>

</html>