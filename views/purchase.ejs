                    <li class="nav-item">
                        <a class="nav-link" href="/addEvent"><strong>New Event</strong></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/addReview"><strong>Add New Review</strong></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-rounded btn-success" href="/purchase"><strong>Purchase N
                                Bid</strong></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="form-container">
            <h1 class="form-title">Event's Purchases & Bids</h1>
            <form id="purchaseForm">
                <div class="mb-3">
                    <label for="name" class="form-label">Your Name</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Your Email</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <div class="mb-3">
                    <label for="contact" class="form-label">Your Contact Number</label>
                    <input type="text" class="form-control" id="contact" name="contact" required
                        oninput="allowNumbersOnly(event)" pattern="\d*">
                </div>
                <div class="mb-3">
                    <label for="program" class="form-label">Name of Program or Event</label>
                    <input type="text" class="form-control" id="program" name="program" required>
                </div>
                <div class="mb-3">
                    <label for="amount" class="form-label">Amount: (In SGD$)</label>
                    <input type="text" class="form-control" id="amount" name="amount" required
                        oninput="formatAmount(event)">
                </div>
    
                <button type="submit" class="btn btn-submit">Submit</button>
            </form>
            <div id="successMessage" style="display: none;">
                <p>Form submitted successfully!</p>
            </div>
        </div>
    </div>
    
    <script>
        const form = document.getElementById('purchaseForm');
    
        form.addEventListener('submit', function(event) {
            event.preventDefault(); // Prevent default form submission
    
            // Perform any form validation or processing here
    
            // Show success message
            const successMessage = document.getElementById('successMessage');
            successMessage.style.display = 'block';
    
            // Redirect to root page after 2 seconds (2000 milliseconds)
            setTimeout(function() {
                window.location.href = '/'; // Redirect to root page
            }, 2000); // Adjust delay as needed
        });
    
        function allowNumbersOnly(event) {
            // Function to allow only numbers in the contact field if needed
            const input = event.target;
            input.value = input.value.replace(/\D/g, ''); // Replace non-digits with an empty string
        }
    
        function formatAmount(event) {
            // Function to format amount input if needed
            // Add your formatting logic here
        }
    </script>

